{
  "extends": "solium:all",
  "rules": {
    "imports-on-top": 1,
    "variable-declarations": 1,
    "array-declarations": 1,
    "operator-whitespace": 1,
    "lbrace": 0,
    "mixedcase": 0,
    "camelcase": 1,
    "uppercase": 1,
    "no-empty-blocks": 1,
    "no-unused-vars": 1,
    "quotes": 1,
    "error-reason": 0,
    "indentation": ["error", 4],
